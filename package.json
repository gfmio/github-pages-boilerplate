{
  "name": "github-pages-boilerplate",
  "version": "1.0.0",
  "description": "Github Pages SPA TypeScript boilerplate",
  "main": "index.js",
  "repository": "https://github.com/gfmio/",
  "author": "Frédérique Mittelstaedt <me@gfm.io> (https://www.gfm.io)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:debug": "webpack-cli --config ./config/webpack/webpack.debug.js",
    "build:debug:watch": "webpack-cli --config ./config/webpack/webpack.debug.js --watch",
    "build:release": "webpack-cli --config ./config/webpack/webpack.release.js",
    "build:release:watch": "webpack-cli --config ./config/webpack/webpack.release.js --watch",
    "build:docs": "webpack-cli --config ./config/webpack/webpack.docs.js",
    "build:docs:watch": "webpack-cli --config ./config/webpack/webpack.docs.js --watch",
    "build": "npm run build:docs",
    "build:watch": "npm run build:docs:watch",
    "start:debug": "lite-server -c ./config/lite-server/bs-config.debug.json",
    "start:debug:watch": "lite-server -c ./config/lite-server/bs-config.debug.json",
    "start:release": "lite-server -c ./config/lite-server/bs-config.release.json",
    "start:release:watch": "lite-server -c ./config/lite-server/bs-config.release.json",
    "start": "npm run start:release",
    "start:watch": "npm run start:release:watch",
    "watch:debug": "npm-run-all -p build:debug:watch start:debug:watch",
    "watch:release": "npm-run-all -p build:release:watch start:release:watch",
    "watch": "npm run watch:debug",
    "pre-release": "npm run clean:docs && npm run build",
    "release": "git pull && npm run pre-release && git add . && git commit -m \"New version\" && git push",
    "clean:docs": "rm -rf ./docs",
    "clean:dist:debug": "rm -rf ./dist/debug",
    "clean:dist:release": "rm -rf ./dist/release",
    "clean:dist": "rm -rf ./dist",
    "clean:node": "rm -rf ./node_modules",
    "clean": "rm -rf ./docs ./dist ./node_modules",
    "pretest": "",
    "test": "mocha --reporter spec --require ./config/tests/mocha.tshook.js ./tests/**/*.{js,ts,tsx}",
    "test:watch": "mocha --reporter spec --require ./config/tests/mocha.tshook.js --watch --watch-extensions js,ts,tsx ./tests/**/*.{js,ts,tsx}",
    "lint": "tslint -c ./config/tslint/tslint.json -p ./config/tsconfig/tsconfig.json"
  },
  "dependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.1",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/react-router": "^4.0.26",
    "@types/react-router-dom": "^4.2.7",
    "app-manifest-webpack-plugin": "^1.1.2",
    "awesome-typescript-loader": "^5.0.0",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "lite-server": "^2.3.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "sass-loader": "^7.0.3",
    "source-map-loader": "^0.2.3",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3",
    "webpack-merge": "^4.1.2"
  }
}
